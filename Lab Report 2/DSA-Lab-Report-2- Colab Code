        "def find_min_max(sequence, index=0, current_min=None, current_max=None):\n",
        "    if index == 0:\n",
        "        if not sequence:\n",
        "            return None, None\n",
        "        current_min = current_max = sequence[0]\n",
        "\n",
        "    if index == len(sequence):\n",
        "        return current_min, current_max\n",
        "\n",
        "    if sequence[index] < current_min:\n",
        "        current_min = sequence[index]\n",
        "    if sequence[index] > current_max:\n",
        "        current_max = sequence[index]\n",
        "\n",
        "    return find_min_max(sequence, index + 1, current_min, current_max)\n",
        "\n",
        "# Example usage:\n",
        "sequence = [5, 2, 9, 1, 5, 6]\n",
        "min_val, max_val = find_min_max(sequence)\n",
        "print(\"Minimum:\", min_val, \"Maximum:\", max_val)"
      ]
    }
  ]
