        "class Polygons:\n",
        "    \"\"\"A class representing geometric polygons with name, sides, and area attributes.\"\"\"\n",
        "\n",
        "    def __init__(self, name: str, sides: int, area: float):\n",
        "        \"\"\"\n",
        "        Initialize a polygon instance.\n",
        "\n",
        "        Args:\n",
        "            name (str): Name of the polygon\n",
        "            sides (int): Number of sides (must be â‰¥3)\n",
        "            area (float): Surface area (must be >0)\n",
        "        \"\"\"\n",
        "        self._name = name    # Encapsulated attribute for polygon name\n",
        "        self._sides = sides  # Encapsulated attribute for side count\n",
        "        self._area = area    # Encapsulated attribute for surface area\n",
        "\n",
        "    # Name accessors\n",
        "    def set_name(self, name: str) -> None:\n",
        "        \"\"\"Set the polygon's name.\"\"\"\n",
        "        self._name = name\n",
        "\n",
        "    def get_name(self) -> str:\n",
        "        \"\"\"Get the polygon's name.\"\"\"\n",
        "        return self._name\n",
        "\n",
        "    # Sides accessors\n",
        "    def set_sides(self, sides: int) -> None:\n",
        "        \"\"\"Set the number of sides.\"\"\"\n",
        "        self._sides = sides\n",
        "\n",
        "    def get_sides(self) -> int:\n",
        "        \"\"\"Get the number of sides.\"\"\"\n",
        "        return self._sides\n",
        "\n",
        "    # Area accessors\n",
        "    def set_area(self, area: float) -> None:\n",
        "        \"\"\"Set the surface area.\"\"\"\n",
        "        self._area = area\n",
        "\n",
        "    def get_area(self) -> float:\n",
        "        \"\"\"Get the surface area.\"\"\"\n",
        "        return self._area"
      ]
    },
    {
      "cell_type": "code",
      "source": [
        "# Create a square instance\n",
        "square = Polygons(name=\"Square\", sides=4, area=25.0)\n",
        "\n",
        "# Retrieve and display attributes\n",
        "print(\"Polygon Name:\", square.get_name())      # Output: Square\n",
        "print(\"Number of Sides:\", square.get_sides()) # Output: 4\n",
        "print(\"Area:\", square.get_area())             # Output: 25.0"
